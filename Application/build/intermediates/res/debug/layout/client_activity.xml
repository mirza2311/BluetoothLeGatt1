<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/Port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/IPaddress"
        android:layout_alignStart="@+id/IPaddress">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:layout_gravity="bottom"
        android:layout_below="@+id/Port"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/IPaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="IP Address:"
        android:id="@+id/textViewIP"
        android:layout_alignBottom="@+id/IPaddress"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PORT"
        android:id="@+id/textViewPort"
        android:layout_alignBottom="@+id/Port"
        android:layout_alignRight="@+id/textViewIP"
        android:layout_alignEnd="@+id/textViewIP" />

</RelativeLayout>


